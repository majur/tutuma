<div class="container mt-4">
  <h1>Prepnutie medzi tenantmi</h1>

  <div class="list-group mt-4">
    <% @accounts.each do |account| %>
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <h5><%= account.name %></h5>
          <% if current_user.admin_in?(account) %>
            <span class="badge bg-primary">Admin</span>
          <% else %>
            <span class="badge bg-secondary">Užívateľ</span>
          <% end %>
        </div>
        <% if current_account == account %>
          <span class="badge bg-success">Aktívny</span>
        <% else %>
          <%= button_to "Prepnúť", account_set_current_path(account_id: account.id), method: :post, class: "btn btn-sm btn-outline-primary" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= link_to "Späť", root_path, class: "btn btn-secondary" %>
  </div>
</div>
