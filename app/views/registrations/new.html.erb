<div class="max-w-md mx-auto mt-10 p-6 bg-white rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-6 text-center">Register Your Team</h1>

  <%= form_with model: @user, url: registration_path, local: true, class: "space-y-4" do |form| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 text-red-600 p-3 rounded mb-4">
        <h2 class="font-bold"><%= pluralize(@user.errors.count, "error") %> prevented this team from being registered:</h2>
        <ul class="list-disc pl-5">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :name, "Your Name", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", required: true %>
    </div>

    <div class="field">
      <%= form.label :email_address, "Email Address", class: "block text-sm font-medium text-gray-700" %>
      <%= form.email_field :email_address, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", required: true %>
    </div>

    <div class="field">
      <%= form.label :team_name, "Team Name", class: "block text-sm font-medium text-gray-700" %>
      <%= text_field_tag :team_name, nil, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", required: true %>
    </div>

    <div class="field">
      <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
      <%= form.password_field :password, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", required: true %>
    </div>

    <div class="field">
      <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
      <%= form.password_field :password_confirmation, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", required: true %>
    </div>

    <div class="actions">
      <%= form.submit "Register Team", class: "w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= link_to "Already have an account? Sign in", new_session_path, class: "text-indigo-600 hover:text-indigo-500" %>
  </div>
</div>