<div class="max-w-3xl mx-auto p-6 bg-white rounded-lg shadow-md">
  <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= account.name %></h1>
  <h2 class="text-xl font-semibold text-gray-700 mb-6">Team Members</h2>

  <% if current_user.admin? %>
    <%= link_to "Invite Team Members", 
        new_invitation_path, 
        class: "inline-block px-6 py-3 mb-6 bg-indigo-600 text-white font-bold rounded-md hover:bg-indigo-700 transition-colors shadow-md text-lg tracking-wide" %>
  <% end %>

  <ul class="space-y-3 mb-8">
    <% users.each do |user| %>
      <li class="flex items-center justify-between p-3 bg-gray-50 rounded-md">
        <div>
          <span class="text-gray-900"><%= user.name %></span>
          <span class="text-gray-500 ml-2">(<%= user.email_address %>)</span>
          <% if user.admin? %>
            <span class="ml-2 px-2 py-1 text-xs bg-blue-100 text-blue-800 rounded-full">Admin</span>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>

  <%= render LogoutButtonComponent.new(full_width: true) %>
</div>