<header class="w-full border-b border-gray-200 bg-white shadow-sm">
  <div class="container mx-auto px-4 py-2 flex justify-between items-center">
    <div>
      <%= link_to root_path, class: "text-xl font-bold text-indigo-600" do %>
        Tutuma
      <% end %>
    </div>
    
    <div class="flex items-center space-x-4">
      <div class="text-right">
        <div class="font-medium"><%= current_user.name %></div>
        <div class="text-sm text-gray-500"><%= current_user.email_address %></div>
      </div>
      
      <%= link_to "Odhlásiť sa", 
          logout_path, 
          data: { "turbo-method": :delete },
          class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
    </div>
  </div>
</header> 