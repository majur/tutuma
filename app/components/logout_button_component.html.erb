<% if tag == :a %>
  <%= link_to(logout_path, 
      class: button_classes,
      style: button_styles,
      data: { "turbo-method": :delete }) do %>
    <%= button_text %>
  <% end %>
<% else %>
  <%= button_to(logout_path, 
      method: :delete,
      class: button_classes,
      style: button_styles) do %>
    <%= button_text %>
  <% end %>
<% end %>
